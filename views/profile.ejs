<link rel="stylesheet" href="/css/profile.css">
<div id="profile-container">

    <% let flag=false;%>
    <% if(locals.localuser) { %>
        
        <% for(eachFriendship of user.friendships) { %>
            
            <% if ( JSON.stringify(locals.localuser._id) == JSON.stringify(eachFriendship.from) || JSON.stringify(locals.localuser._id) == JSON.stringify(eachFriendship.to) ) { %>
                <% flag=true; %>
            <% } %>
        <% } %>
    <% } %>
    <p>
        <%= user.name%>
        
    </p>
    <p>
        <%= user.email%>
    </p>

    <% if ( (locals.localuser && user.id != locals.localuser.id) && flag==false) { %>
        
        <a href="/friendship/create/<%=user.id%>">

            <button type="submit" class="add-friend-button">
                
                    <img src="https://image.flaticon.com/icons/svg/2583/2583145.svg" alt="">
                
                
                    <span>Add <%=user.name%> as Friend</span>
                
            </button>
        </a>
        
    <% }else if(locals.localuser && user.id != locals.localuser.id ) { %>

        <a href="/friendship/delete/<%=locals.localuser.id%>,<%=user.id%>">
            <button type="submit" class="remove-friend-button">
                
                    <img src="https://image.flaticon.com/icons/svg/3260/3260698.svg" alt="">
                
                
                    <span>REMOVE </span>
                
            </button>
        </a>
    <% } %>
</div>